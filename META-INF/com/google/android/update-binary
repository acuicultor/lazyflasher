#!/sbin/sh
# Kernel Flasher installer backend

tmp=/tmp/kernel-flasher

if [ "$3" ]; then
	zip=$3
	console=/proc/$$/fd/$2
	# write the location of the console buffer to /tmp/console for other scripts to use
	echo "$console" > /tmp/console
else
	console=$(cat /tmp/console)
	[ "$console" ] || console=/proc/$$/fd/1
fi

print() {
	if [ "$1" ]; then
		echo "ui_print $1" > "$console"
	else
		echo "ui_print  " > "$console"
	fi
	echo
}

abort() {
	[ "$1" ] && {
		print "Error: $1"
		print "Aborting..."
	}
	cleanup
	print "Failed to patch boot image!"
	exit 1
}

cleanup() {
	[ "$zip" ] && rm /tmp/console
	umount /system
}

extract() {
	rm -rf "$2"
	mkdir -p "$2"
	unzip -o "$1" -d "$2" || abort "Failed to extract zip to $2!"
}

setperm() {
	find "$3" -type d -exec chmod "$1" {} \;
	find "$3" -type f -exec chmod "$2" {} \;
}

mount() {
	mountpoint -q "$1" || /sbin/busybox mount -o rw "$1" || abort "Unable to mount $1 as rw!"
	>> "$1/.rw" && return || /sbin/busybox mount -o remount,rw "$1"
	>> "$1/.rw" && return || abort "Unable to write to $1!"
}

umount() {
	mountpoint -q "$1" || return 0
	rm -f "$1/.rw"
	/sbin/busybox umount "$1"
}

print "#######################################"
print "#        Radioactive Kernel           #"
print "#                by                   #"
print "#            acuicultor               #"
print "#######################################"

# Unpack the installer
[ "$zip" ] && {
	print "Unpacking the installer..."
	extract "$zip" "$tmp"
}
cd "$tmp"

. config.sh

[ "$device_names" ] && {
	if ! command -v getprop; then
		print "Warning: getprop not found! Skipping device check!"
		return
	fi
	print "Checking device compatibility..."
	match=0
	ro_product_device=$(getprop ro.product.device)
	ro_product_model=$(getprop ro.product.model)
	ro_build_product=$(getprop ro.build.product)
	for i in $device_names; do
		[ "$ro_product_device" = "$i" ] ||
		[ "$ro_product_model" = "$i" ] ||
		[ "$ro_build_product" = "$i" ] &&
			match=1
	done
	[ $match != 1 ] && abort "Unsupported device"
}

mount /system
# mount /data

setperm 0755 0755 "$bin"

print "Running boot image patcher..."
sh boot-patcher.sh || abort
print ""
print ""

print "Boot image patching complete"
print ""

print "Creating init.d..."
mkdir $root/system/etc/init.d;
setperm 0755 0755 $root/system/etc/init.d;
print ""

print "init.d creation complete"
print ""

print "Installing UKM..."
rm -rf /data/UKM/*;
rm -rf /system/etc/init.d/UKM;
rm -rf /system/xbin/uci;
rm -rf /system/addon.d/UKM.sh;
cp -fvr /tmp/kernel-flasher/data/* /data;
cp -f /tmp/kernel-flasher/data/UKM/uci /system/xbin/uci;
cp -f /tmp/kernel-flasher/data/UKM/UKM /system/etc/init.d/UKM;
cp -f /tmp/kernel-flasher/data/UKM/UKM /system/addon.d/UKM.sh;
setperm 0755 0755 /data/UKM;
setperm 0755 0755 /system/xbin/uci;
setperm 0755 0755 /system/etc/init.d/UKM;
print ""

print "UKM installation complete"

print"Installing busybox..."
cp -f /tmp/kernel-flasher/tools/busybox /system/xbin/busybox;
setperm 0755 0755 /system/xbin/busybox;
print ""

print "Busybox installation complete"
print ""

print "Installing Synapse..."
mkdir $root/system/app/Synapse;
setperm 0755 0755 $root/system/app/Synapse;
cp -f /tmp/kernel-flasher/system/app/Synapse/Synapse.apk /system/app/Synapse/Synapse.apk;
setperm 0755 0644 $root/system/app/Synapse;
print""

print "Synapse installation complete"
print ""

print ""

cleanup
print "Done installing!"
print ""
print ""
